<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codemaicon.adivinharnumero.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:text="Escolha um numero entre 0 e 10"
        android:textAlignment="center"
        android:textSize="@dimen/cabecalho_texto"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="358dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="26dp">

        <TextView
            android:id="@+id/resultadoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/botaoJogarId"
            android:layout_alignStart="@+id/botaoJogarId"
            android:layout_below="@+id/botaoJogarId"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="64dp"
            android:text="@string/texto_numero"
            android:textSize="@dimen/cabecalho_texto"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="265dp" />

        <Button
            android:id="@+id/botaoJogarId"
            android:layout_width="281dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="168dp"
            android:text="@string/botao_jogar"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="159dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
