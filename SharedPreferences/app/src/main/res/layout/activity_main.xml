<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7ec78"
    tools:context="com.codemaicon.sharedpreferences.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual e seu nome ?"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textoNomeId"
        android:layout_alignEnd="@+id/textoNomeId"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/textoNomeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botaoSalvarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textoNomeId"
        android:layout_alignRight="@+id/textoNomeId"
        android:layout_below="@+id/textoNomeId"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="91dp"
        android:text="Salvar" />

    <TextView
        android:id="@+id/textoExibicaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/botaoSalvarId"
        android:layout_alignRight="@+id/botaoSalvarId"
        android:layout_below="@+id/botaoSalvarId"
        android:layout_marginTop="54dp"
        android:text="ola usuario"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>
